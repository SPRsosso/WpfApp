<Window x:Class="WpfAppMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppMVVM"
        xmlns:viewmodel ="clr-namespace:WpfAppMVVM.ViewModels"
        mc:Ignorable="d"
        Title="Wzorzec MVVM" Height="250" Width="400">
    <Window.DataContext>
        <viewmodel:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label 
            Grid.Row="0"
            Content="{Binding Header}"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontSize="18"/>
        <TextBox 
            Grid.Row="1"
            Text="{Binding Arg1}"
            Margin="10"
            Padding="5"/>
        <TextBox 
            Grid.Row="2"
            Text="{Binding Arg2}"
            Margin="10"
            Padding="5"/>
        <Button 
            Grid.Row="3"
            Content="Iloczyn"
            Margin="80 10"
            FontSize="16"
            Command="{Binding IloczynCommand}"
            CommandParameter="Iloczyn"/>
    </Grid>
</Window>
